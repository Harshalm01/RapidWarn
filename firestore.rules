rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all authenticated users access to users collection (for admin dashboard)
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow all authenticated users full access (for testing/development)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}